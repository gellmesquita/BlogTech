<%- include('./partes/head.ejs') %> 
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="card">
                    <div class="card-header bg-dark">
                        <h2 style="color:white">Editar Artigo</h2>
                    </div>
                    <div class="card-body">
                        <form action="/article/save-update" method="POST">
                            <input type="hidden" name="idArticle" value="<%= article.id %> ">
                            <input type="text" name="title" value="<%= article.type %> " id="" class="form-control" placeholder="Dê um titulo ao Artigo" required>
                            <br>
                            <input type="text" name="summary" value="<%= article.summary %> " class="form-control" placeholder="Dê uma breve descrição do Artigo" required>
                            <br>
                            <textarea placeholder="Crie um Artigo" name="article" id="tinymceUser" class="form-control" cols="15" rows="12"><%- article.body %> </textarea><br>
                            <select style="display: inline-block;" class="form-control w-50" name="CategoryId" id="category">
                                <% category.forEach(element => { %>
                                    <% if (element.id == article.CategoryId) { %>
                                        <option selected value="<%= element.id %> "><%= element.title %></option>
                                    <% }else{ %>
                                        <option value="<%= element.id %> "><%= element.title %></option>
                                    <% } %>     
                                <% }) %>
                            </select>
                            <input class="btn btn-dark m-2" type="submit" value="Update Artigo">
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
<%- include('./partes/footer.ejs') %>
<script>
    tinymce.init({
        language:'pt_BR',
        selector: '#tinymceUser',
        plugins:'lists color advlist print image autolink preview hr link searchreplace wordcount fullscreen insertdatatime media save table emoticons'
    });
</script> 

